<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/anaBeyaz2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridLayout


                android:id="@+id/grid_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:alignmentMode="alignMargins"
                android:background="@color/darkBeyaz3"
                android:columnCount="1"

                android:columnOrderPreserved="false"
                android:paddingBottom="15dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:rowCount="3">


                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="40dp"

                    android:clickable="true"
                    app:cardCornerRadius="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/darkBeyaz3"
                        android:orientation="vertical">


                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"

                            android:layout_marginRight="18dp"
                            android:layout_marginTop="25dp"
                            android:clickable="true"
                            app:cardCornerRadius="13dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/anaBeyaz2"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/txt_detayliBaslik"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:text="Başlık"
                                    android:textAlignment="center"
                                    android:textColor="@color/darkBeyaz"
                                    android:textSize="30sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_detayliFiyat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginTop="15dp"
                                    android:text="50 TL"
                                    android:textAlignment="center"
                                    android:textColor="@color/darkBeyaz"
                                    android:textSize="30sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="35dp"

                                android:layout_marginLeft="18dp"
                                android:layout_marginRight="18dp"
                                android:layout_marginTop="35dp"
                                android:clickable="true"
                                app:cardCornerRadius="13dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/anaBeyaz2"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="15dp"
                                        android:text="Detaylı Bilgiler :"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="30dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txt_detayliOdenenTaksit"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawableLeft="@drawable/infoicon"
                                            android:paddingLeft="20dp"
                                            android:text="Ödeme her ayın 12. günüdür."
                                            android:textAlignment="viewStart"
                                            android:textColor="@color/darkBeyaz"
                                            android:textSize="20sp" />

                                        <TextView
                                            android:id="@+id/txt_detayliKalanTaksit"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:drawableLeft="@drawable/infoicon"
                                            android:paddingLeft="20dp"
                                            android:text="Başlık"
                                            android:textAlignment="viewStart"
                                            android:textColor="@color/darkBeyaz"
                                            android:textSize="20sp" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="vertical"
                                        android:paddingBottom="45dp">

                                        <TextView
                                            android:id="@+id/txt_detayliOdemeGunu"

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawableLeft="@drawable/infoicon"
                                            android:paddingLeft="20dp"
                                            android:text="Başlık"
                                            android:textAlignment="viewStart"
                                            android:textColor="@color/darkBeyaz"
                                            android:textSize="20sp"

                                            />

                                        <TextView
                                            android:id="@+id/txt_detayliAylikHatirlansinmi"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:drawableLeft="@drawable/infoicon"
                                            android:paddingLeft="20dp"
                                            android:text="Başlık"
                                            android:textAlignment="viewStart"
                                            android:textColor="@color/darkBeyaz"
                                            android:textSize="20sp" />


                                    </LinearLayout>


                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </GridLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>