<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">




    <GridLayout


        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"

        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingBottom="15dp"

        android:rowCount="3">


        <android.support.v7.widget.CardView


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/custom_tum_verilerListe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkBeyaz"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView

                    android:id="@+id/tx_tumOdemelerBaslik"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:drawableLeft="@drawable/searchicon"
                    android:drawableTint="@color/anaBeyaz2"
                    android:fontFamily="sans-serif-smallcaps"
                    android:paddingLeft="5dp"
                    android:text="Deneme"
                    android:textColor="@color/anaBeyaz2"
                    android:textSize="27sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_tumOdemelerCircleButon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"

                    android:background="@drawable/circle_btn_background"
                    android:src="@drawable/arrowicon"
                    android:textSize="40sp"
                    android:tint="@android:color/white" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </GridLayout>



</LinearLayout>