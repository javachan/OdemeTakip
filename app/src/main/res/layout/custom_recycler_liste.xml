<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">




    <GridLayout


        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"

        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingBottom="15dp"

        android:rowCount="3">




        <android.support.v7.widget.CardView



            app:cardCornerRadius="10dp"
            android:clickable="true"
            android:layout_height="68dp"
            android:layout_width="match_parent">
            <LinearLayout android:layout_width="match_parent"
                android:id="@+id/custom_tum_verilerListe"
                android:background="@color/darkBeyaz"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/tx_tumOdemelerBaslik"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:drawableLeft="@drawable/searchicon"
                    android:textStyle="bold"
                    android:drawableTint="@color/anaBeyaz2"
                    android:fontFamily="sans-serif-smallcaps"
                    android:paddingLeft="5dp"
                    android:text="Deneme"
                    android:textColor="@color/anaBeyaz2"
                    android:textSize="27sp" />

            <ImageButton
                android:id="@+id/btn_tumOdemelerCircleButon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_btn_background"
                android:src="@drawable/arrowicon"
                android:tint="@android:color/white"
                android:textSize="40sp" />

           </LinearLayout>
        </android.support.v7.widget.CardView>

    </GridLayout>



</LinearLayout>