<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    >




    <GridLayout

        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"

        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingBottom="15dp"

        android:rowCount="3">

        <android.support.v7.widget.CardView

            app:cardCornerRadius="25dp"
            android:clickable="true"
            android:layout_height="67dp"
            android:layout_width="match_parent">


            <TextView
                android:id="@+id/tx_tumOdemelerBaslik"
                android:layout_gravity="center_vertical|left"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Deneme"
                android:paddingLeft="5dp"
                android:textColor="@color/anaYesil2"
                android:drawableLeft="@drawable/searchicon"
                android:drawableTint="@color/anaYesil"
                android:textSize="27sp" />

            <ImageButton
                android:id="@+id/btn_tumOdemelerCircleButon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="30dp"
                android:background="@drawable/circle_btn_background"
                android:src="@drawable/arrowicon"
                android:tint="@android:color/white"
                android:textSize="40sp" />


        </android.support.v7.widget.CardView>

    </GridLayout>



</LinearLayout>