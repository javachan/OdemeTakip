<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/anaYesil"
    android:layout_marginTop="50dp">

    <TextView
        android:id="@+id/custom_liste2_odemeBaslik"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ödeme başlığı"
        android:textSize="30sp"/>


    <TextView
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aylık Ödenen Miktar:"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/custom_liste2_aylik_odeme_miktar"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="750 TL"
        android:textSize="22sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:layout_marginLeft="35dp">

            <TextView
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kalan Ay"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/custom_liste2_kalan_ay_sayisi"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"
                android:textSize="22sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_marginTop="5dp"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ödenen Ay"
                android:textSize="13sp"
                android:paddingRight="35dp"
                />

            <TextView
                android:id="@+id/custom_liste2_odenen_ay_sayisi"
                android:layout_marginTop="5dp"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="22sp"
                android:paddingRight="53dp"/>

        </LinearLayout>





    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Bu ay ki ödeme durumu: "
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/custom_liste2_odenme_durumu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Ödendi"
        android:textStyle="bold"
        android:textAlignment="center"

        android:layout_marginBottom="15dp"/>




</LinearLayout>