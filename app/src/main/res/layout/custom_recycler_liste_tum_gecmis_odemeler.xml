<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <GridLayout

        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"

        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"

        android:rowCount="3">


        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardCornerRadius="7dp"
            android:layout_marginTop="3dp">
            <LinearLayout
                android:id="@+id/custom_liste3_gecmis_arkaplan"
                android:background="@color/anaYesil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

         <TextView
             android:textColor="@color/anaBeyaz2"
             android:id="@+id/custom_liste3_gecmis_odeme_tarih"
             android:padding="5dp"

             android:textStyle="bold"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="27 Tem Perşem 14:10"
             android:textAlignment="viewEnd"
             android:textSize="15sp"
             />

            <TextView
                android:textColor="@color/anaBeyaz2"
                android:id="@+id/custom_liste3_gecmis_odeme_baslik"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Başlık"
                android:layout_marginLeft="15sp"
                android:textSize="24sp"/>

             <TextView
                 android:textColor="@color/anaBeyaz2"
                 android:id="@+id/custom_liste3_gecmis_odeme_aciklama"
                 android:padding="5dp"
                 android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Taksit 750 TL olarak ödenmiştir."
                 android:textAlignment="center"
                 android:layout_marginBottom="10dp"
                 />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </GridLayout>

</LinearLayout>